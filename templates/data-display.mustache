{{!
    @template profilefield_database/data-display

    Example context (json):
    {
      "fields": [
        {
          "name": "Nome",
          "data": "Eduardo Kraus",
          "visible": true
        },
        {
          "name": "Email",
          "data": "eduardo.kraus@example.com",
          "visible": true
        }
      ]
    }

}}

<table class="ml-3 mt-0 table" style="width: auto;">
    {{#fields}}
        {{#visible}}
            <tr>
                <td style="text-align: right;font-weight: 600;padding: 4px;">{{name}}:</td>
                <td style="padding: 4px;">{{data}}</td>
            </tr>
        {{/visible}}
    {{/fields}}
</table>

{{#is_admin}}
    <div class="alert alert-warning">{{{message_admin}}}</div>
{{/is_admin}}
