{{!
    @template profilefield_database/data-display

    Example context (json):
    {
      "fields": [
        {
          "field": "Nome",
          "data": "Eduardo Kraus",
          "visible": true
        },
        {
          "field": "Email",
          "data": "eduardo.kraus@example.com",
          "visible": true
        }
      ]
    }

}}

<table class="ml-3 mt-0 table" style="width: auto;">
    {{#fields}}
        {{#visible}}
            {{#field}}
                <tr>
                    <td style="text-align: right;font-weight: 600;padding: 4px;">{{{field}}}:</td>
                    <td style="padding: 4px;">{{{data}}}</td>
                </tr>
            {{/field}}
            {{^field}}
                <div>{{data}}</div>
            {{/field}}
        {{/visible}}
    {{/fields}}
</table>

{{{message_admin}}}
